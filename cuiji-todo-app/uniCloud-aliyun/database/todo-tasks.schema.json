{
  "bsonType": "object",
  "required": ["title", "createTime"],
  "properties": {
    "_id": {
      "description": "ID，系统自动生成"
    },
    "title": {
      "bsonType": "string",
      "title": "任务标题",
      "description": "任务标题，必填",
      "minLength": 1,
      "maxLength": 100
    },
    "description": {
      "bsonType": "string",
      "title": "任务描述",
      "description": "任务详细描述",
      "maxLength": 500
    },
    "completed": {
      "bsonType": "bool",
      "title": "是否完成",
      "description": "任务完成状态",
      "defaultValue": false
    },
    "priority": {
      "bsonType": "int",
      "title": "优先级",
      "description": "任务优先级：1-低，2-中，3-高",
      "minimum": 1,
      "maximum": 3,
      "defaultValue": 2
    },
    "category": {
      "bsonType": "string",
      "title": "任务分类",
      "description": "任务所属分类",
      "maxLength": 50
    },
    "dueDate": {
      "bsonType": "timestamp",
      "title": "截止日期",
      "description": "任务截止日期"
    },
    "createTime": {
      "bsonType": "timestamp",
      "title": "创建时间",
      "description": "任务创建时间",
      "forceDefaultValue": {
        "$env": "now"
      }
    },
    "updateTime": {
      "bsonType": "timestamp",
      "title": "更新时间",
      "description": "任务最后更新时间",
      "forceDefaultValue": {
        "$env": "now"
      }
    },
    "userId": {
      "bsonType": "string",
      "title": "用户ID",
      "description": "任务所属用户ID",
      "maxLength": 100
    }
  }
}
